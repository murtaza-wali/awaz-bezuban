<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >


    <TextView
        android:id="@+id/show_message_txt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_recieve_message"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hello"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />


    <TextView
        android:id="@+id/chat_time_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2012"
        android:layout_marginStart="6dp"
        android:textColor="@color/awaz_grey_font"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_message_txt_item" />



</androidx.constraintlayout.widget.ConstraintLayout>